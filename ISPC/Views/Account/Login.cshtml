@model ISPC.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <title>ISPC Sign On</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Integrated SPC Tools" />
    <meta name="keywords" content="SPC,SPI,AOI,AXI" />
    <meta name="author" content="GAM_Flextronics" />
    <meta name="robots" content="index,follow" />
    <meta name="application-name" content="www.Flextronics.com" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!--Site CSS-->
    <link rel="Stylesheet" href="../../Content/themes/bootstrap.min.css" />
    <link rel="Stylesheet" href="../../Content/themes/font-awesome.min.css" />
    <link rel="Stylesheet" href="../../Content/themes/ispc/main.css" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--[if lte IE 6]>    
    <link rel="stylesheet" type="text/css" href="../../Content/themes/bootstrap-ie6.min.css">
    <link rel="stylesheet" type="text/css" href="../../Content/themes/ie.css">
    <![endif]-->
    <!--[if IE 7]>
    <link rel="Stylesheet" href="../../Content/themes/font-awesome-ie7.min.css" />        
    <![endif]-->
    <!-- Favicons
    <link rel="apple-touch-icon-precomposed" href="http://static.bootcss.com/www/assets/ico/apple-touch-icon-precomposed.png" />
    <link rel="shortcut icon" href="http://static.bootcss.com/www/assets/ico/favicon.png" />-->
</head>
<body>
    <div class="container" style="margin-top:150px;">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-md-offset-4">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <h2 class="form-signin-heading">
                        Please sign in to ISPC</h2>       
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-user"></i>&nbsp;</span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-key"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                    </div>
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Remember me
                    </label>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in</button>  
                    <p>
                        @Html.ActionLink("Register", "Register") if you don't have an account.
                    </p>                                                                                                     
                }
            </div>
        </div>
    </div>
    <script src="../../Scripts/Basic/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Basic/bootstrap.min.js" type="text/javascript"></script>
     <!--[if lt IE 9]>
        <script src="../../Scripts/Basic/html5shiv.js" type="text/javascript"></script>
        <script src="../../Scripts/Basic/respond.js" type="text/javascript"></script>
        <script src="../../Scripts/Basic/excanvas.min.js" type="text/javascript"></script>    
    <![endif]-->
</body>
</html>
