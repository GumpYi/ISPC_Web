@{
    ViewBag.Title = "ISPC RealTime Monitor";
}
@section scripts{
    <script src="@Url.Content("~/Scripts/Basic/HighchartsThemes/grid-light.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ViewModel/RealTime/RealTimeIndex.js")" type="text/javascript"></script>
}
<div id="firstDiv">
</div>
<section class="container clearfix" style="background-color: #fff;">
    <div class="row">
        <div class="col-md-12 col-sm-12">
        <div class="left-index" style="float: left; width: 86%;">
            <div id="SPI">
                <div class="panel panel-default">
                <div class="panel-heading"><strong>SPI Station</strong></div>
                <div class="panel-body">
                    <div style="width: 100%; height: 40%;" id="spifpy" data-bind="refreshData: FPYList_SPI, type: 'spifpy'">
                    </div>   
                    <br />           
                    <div style="width: 100%; height: 40%;" id="spidppm" data-bind="refreshData: DPPMList_SPI, type: 'spidppm'">
                    </div>    
                </div>
            </div>          
            </div>           
        
            <div id="AOI">
                <div class="panel panel-default">
                <div class="panel-heading"><strong>AOI Station</strong></div>
                <div class="panel-body">
                    <div style="width: 100%; height: 40%;" id="aoifpy" data-bind="refreshData: FPYList_AOI, type: 'aoifpy'">
                </div>    
                <br />        
                <div style="width: 100%; height: 40%;" id="aoidppm" data-bind="refreshData: DPPMList_AOI, type: 'aoidppm'">
                </div> 
                <br />        
                <div style="width: 100%; height: 40%;" id="aoifppm" data-bind="refreshData: FPPMList_AOI, type: 'aoifppm'">
                </div>   
                </div>
                </div>               
            </div>
   
            <div id="AXI">
                <div class="panel panel-default">
                <div class="panel-heading"><strong>AXI Station</strong></div>
                <div class="panel-body">
                    <div style="width: 100%; height: 40%;" id="spifpy" >
                </div>   
                <br />           
                <div style="width: 100%; height: 40%;" id="spidppm">
                </div>       
                </div>
            </div>                
            </div>              
        </div>  

        <div class="right-index" style="float: right; width: 14%; height: 100%;">
            <div class="pinned" style="width: 100%;">               
                <div class="btn-group-vertical" role="group" aria-label="btnbu">
                    <a class="btn btn-info" href="#SPI" role="button">SPI</a> 
                    <a class="btn btn-info" href="#AOI" role="button">AOI</a> 
                    <a class="btn btn-info" href="#AXI" role="button"> AXI</a>          
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#LineModel"><strong>Choose Line</strong></button>
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#USLModel"><strong>UCL&LCL</strong></button>                                                                                                  
                </div>       
            </div>
        </div> 
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="USLModel" tabindex="-1" role="dialog" aria-labelledby="USLModelLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="USLModelLabel">
                    USL&LSL Setting</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <fieldset>
                                <legend>SPI</legend>
                                <div class="input-group">
                                    <span class="input-group-addon">FPY(%)></span>
                                    <input type="text" class="form-control" data-bind="value: ULCLSetting.SPIFPYLCL" />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">DPPM<&nbsp;&nbsp;</span>
                                    <input type="text" class="form-control" data-bind="value: ULCLSetting.SPIDPPMUCL" />
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <fieldset>
                                <legend>AOI</legend>
                                <div class="input-group">
                                    <span class="input-group-addon">FPY(%)></span>
                                    <input type="text" class="form-control" data-bind="value: ULCLSetting.AOIFPYLCL" />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">DPPM<&nbsp;&nbsp;</span>
                                    <input type="text" class="form-control" data-bind="value: ULCLSetting.AOIDPPMUCL" />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">FPPM<&nbsp;&nbsp;</span>
                                    <input type="text" class="form-control" data-bind="value: ULCLSetting.AOIFPPMUCL" />
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close</button>
                <button type="button" class="btn btn-primary" id="SaveUSLDialog">
                    Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="LineModel" tabindex="-1" role="dialog" aria-labelledby="LineModelLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="LineModelLabel">
                    Choose Line to be shown</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <form class="form-inline" role="form">
                        <div class="form-group">
                            <label class="sr-only" for="availableBuildings">
                                Buildings</label>
                            <select data-bind="options: availableBuildings, 
                                optionsValue: 'Building_Id',
                                optionsText: 'Building_Name',
                                value: selectedBuildingTable,
                                optionsCaption: 'Choose Building...',event: {change: loadSegments}" class="form-control input-sm"
                                id="availableBuildings">
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="availableSegments">
                                Segments</label>
                            <select data-bind="options: availableSegments, 
                                optionsValue: 'Segment_Id',
                                optionsText: 'Segment_Name',
                                value: selectedSegmentTable,
                                optionsCaption: 'Choose Segment...'" class="form-control input-sm" id="availableSegments">
                            </select>
                        </div>
                        <button type="button" class="btn btn-success btn-sm" id="refresh" data-bind="click: loadLines">
                            <i class="icon-refresh"></i>&nbsp;Refresh</button>
                    </div>
                    <div class="row">
                        <table class="table table-hover table-bordered table-condensed" style="margin-top: 5px;">
                            <thead>
                                <tr>
                                    <th>
                                        Line Name
                                    </th>
                                    <th>
                                        Line Location
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: ShownLineList">
                                <tr>
                                    <th data-bind="text: Line_Name">
                                    </th>
                                    <th data-bind="text: Line_Location">
                                    </th>
                                    <th>
                                        <label>
                                            <input type="checkbox" data-bind="checked: Status">
                                            Shown
                                        </label>
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="CloseDialog">
                    Close</button>
                <button type="button" class="btn btn-primary" id="SaveLineDialog">
                    Save changes</button>                 
            </div>
        </div>
    </div>
</div>
