@{
    ViewBag.Title = "ISPC Factory Configuration";
    }
@section scripts{
    <script src="@Url.Content("~/Scripts/ViewModel/Factory/BuildingConfig.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ViewModel/Factory/SegmentConfig.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ViewModel/Factory/BusinessUnitConfig.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ViewModel/Factory/ProjectConfig.js")" type="text/javascript"></script>
