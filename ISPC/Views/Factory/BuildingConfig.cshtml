<div class="section container" id="B_M">
    <fieldset>
        <legend><i class="icon-cogs"></i>&nbsp;Building</legend>
    </fieldset>
    <div class="col-md-8 col-sm-8">
        <div class="row">
            <table class="table table-hover table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>
                            Building Name
                        </th>
                        <th>
                            Active
                        </th>
                        <th>
                            Creator Name
                        </th>
                        <th>
                            Creation Time
                        </th>
                        <th>
                            Effective Time
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: BuildingList">
                    <tr data-bind="click:$parent.editBuilding">
                        <th data-bind="text: Building_Name">
                        </th>
                        <th data-bind="text: Is_Active">
                        </th>
                        <th data-bind="text: Creator_Name">
                        </th>
                        <th data-bind="text: Creation_Time">
                        </th>
                        <th data-bind="text: Effect_Time">
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3 col-sm-3 col-md-offset-1 col-sm-3 col-sm-offset-1">
        <h5 class="text-center">
            <strong>Building Management</strong></h5>
        <form class="form-horizontal" role="form" action="">
        <div class="form-group form-group-sm" style="display: none">
            <input class="form-control" type="text" id="Building_Id" placeholder="Building Id"
                data-bind="value:sBuilding_Id">
        </div>
        <div class="form-group form-group-sm">
            <div class="input-group input-group-sm">
                <span class="input-group-addon">Name</span>
                <input class="form-control" type="text" id="Building_Name" placeholder="Building Name"
                    data-bind="value: sBuilding_Name">
            </div>
        </div>
        <div class="form-group form-group-sm" style="display: none">
            <input class="form-control" type="text" id="bCreator_Name" placeholder="Creator Name"
                data-bind="value: sCreator_Name">
        </div>
        <div class="form-group form-group-sm" style="display: none">
            <input class="form-control" type="text" id="bCreation_Time" placeholder="Creation Time"
                data-bind="value: sCreation_Time">
        </div>
        <div class="form-group form-group-sm ">
            <div class='input-group date datetimepicker input-group-sm'>                
                <input type="text" class="form-control " id="bEffect_Time" data-bind="value: sEffect_Time"
                    placeholder="Effective Time" />
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <input type="checkbox" id="BuildingCheck" />
        </div>
        <div class="form-group form-group-sm btn-group">
            <button type="button" class="btn btn-warning" data-bind="click: clearsBuilding">
                <i class="icon-file"></i>&nbsp;New
            </button>
            <button type="button" class="btn btn-danger" data-bind="click: deleteBuilding">
                <i class="icon-trash"></i>&nbsp;Delete
            </button>
            <button type="button" class="btn btn-primary" data-bind="click: storeBuilding">
                <i class="icon-save"></i>&nbsp;Save
            </button>
        </div>
        </form>
    </div>
</div>
